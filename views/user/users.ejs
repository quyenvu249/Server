<div class="flex justify-center" id="cars">
    <!-- RELEVANT MARKUP BEGINS HERE -->
    <div class="container mh0 w-100">
        <div class="container pa0 flex justify-center">
            <div class="listings card-columns">
                <% for (let i = 0; i < data.length; i++) { %>

                <!--                card-->

                <div class="card mv2" style="width: 18rem">
                    <img src="/<%= data[i].avatar %>" class="card-img-top"
                         alt="Mazda hatchback">
                    <div class="card-body">
                        <h5 class="card-title">Họ và tên: <%= data[i].fullName %></h5>
                        <p class="card-text">Số điện thoại: <%= data[i].phoneNumber %>
                        </p>
                        <p class="card-text">Chức vụ:
                            <% if (data[i].role == "Customer") { %>Khách hàng
                            <% } else if (data[i].role == "Staff") { %> Nhân viên
                            <% } else if (data[i].role == "Admin") { %> Quản lý
                            <% } %>
                        </p>
                        <a href="/users/update-user/<%= data[i]._id %>" class="btn btn-info">Sửa</a>
                        <button data-toggle="modal" data-target="#d<%= data[i]._id %>" class="btn btn-danger">Xóa
                        </button>
                        <a href="/users/<%= data[i]._id %>/vehicles" class="btn btn-info">Danh sách xe</a>
                    </div>
                </div>

                <!--                modal delete-->

                <div class="modal fade" id="d<%= data[i]._id %>" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Xác nhận</h5>
                            </div>
                            <div class="modal-body">
                                Bạn có muốn xóa người dùng <%= data[i].fullName %> ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                <a href="/users/delete-user/<%= data[i]._id %>" class="btn btn-danger">Đồng ý</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>


